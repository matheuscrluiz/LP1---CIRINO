/* 4. Crie uma função em linguagem C que receba 2 números e retorne o maior valor.*/

#include <stdio.h>


int main(void)
{
	int n1, n2;

	printf("\nDigite o primeiro número: ");
	scanf("%d", &n1);
	printf("\nDigite o segundo número: ");
	scanf("%d", &n2);
	
	int eh_maior(int n1, int n2);
	eh_maior(n1,n2);

	if(eh_maior(n1,n2) == 1)
		{
			printf("\nO número %d é maior que %d!", n1, n2);
		}
	else
		{
			printf("\nO número %d é maior que %d!", n2, n1);
		}

	return 0;
}

int eh_maior(int x, int y)
{
	if(x > y)
		{
			return 1;
		}
	else
		{
			return 0;
		}
}

/*13) Dados três vetores com 10 posições cada um, preenchidos com números inteiros, fazer um programa em C que, após a leitura dos vetores coloque-os em ordem crescente.*/

#include <stdio.h>
#include <string.h>

int main (void)
{
	int vet[10], vet2[10], vet3[40];
	int i=0;
	int j =0;
	int aux;

	printf("\n PRIMEIRO VETOR!  ");
	for(int i=0;i<10;i++)
		{
			printf("\nDigite o valor da posição %d: ", i);
			scanf("%d", &vet[i]);
		}

	printf("\n SEGUNDO VETOR!  ");
	for(i=0;i<10;i++)
		{
			printf("\nDigite o valor da posição %d: ", i);
			scanf("%d", &vet2[i]);
		}

	for(i=0;i<10;i++)
		{
			vet3[i] = vet[i];
		}
	
	for(i=10;i<20;i++)
		{
			vet3[i] = vet2[i-10];
		}

	printf("\n TERCEIRO VETOR DESORDENADO!  ");
	for ( i = 0; i < 20; i++ )
		{
    	printf("%d -", vet3[i] );
		}

	for(i=0;i<20;i++)
		{
			for(j=i;j<20;j++)
				{
					if(vet3[i] > vet3[j])
						{
							aux=vet3[i];
							vet3[i] = vet3[j];
							vet3[j] = aux;
						}
				}
		}

	printf("\n TERCEIRO VETOR ORDENADO!  ");
	for ( i = 0; i < 20; i++ )
		{
    	printf("%d -", vet3[i] );
		}

	return 0;
}
